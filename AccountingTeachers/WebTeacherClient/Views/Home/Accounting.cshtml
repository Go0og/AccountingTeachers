﻿@{
ViewData["Title"] = "Accounting";
}

<div class="container-fluid">
    <div class="text-center mb-4">
        <h2 class="display-4 text-primary">
            <i class="fas fa-chart-line me-3"></i>Учетность преподавателей
        </h2>
        <p class="text-muted">Система управления учебным персоналом</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Фильтры поиска</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-2">
                    <label class="form-label small text-muted">Кафедра</label>
                    <input type="text" class="form-control filter-input" data-column="0" placeholder="Введите кафедру...">
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">ФИО</label>
                    <input type="text" class="form-control filter-input" data-column="1" placeholder="Введите ФИО...">
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Должность</label>
                    <input type="text" class="form-control filter-input" data-column="2" placeholder="Введите должность...">
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Звание</label>
                    <input type="text" class="form-control filter-input" data-column="3" placeholder="Введите звание...">
                </div>
                <div class="col-md-2">
                    <label class="form-label small text-muted">Ставка</label>
                    <input type="text" class="form-control filter-input" data-column="4" placeholder="Введите ставку...">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button id="resetFilters" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-redo me-2"></i>Сбросить
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-primary">
                <i class="fas fa-table me-2"></i>Текущий контроль
            </h5>
            <button id="downloadReport" class="btn btn-success">
                <i class="fas fa-download me-2"></i>Скачать отчет
            </button>
        </div>
        <div class="card-body p-0">
            <table id="accountingTable" class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th><i class="fas fa-university me-2"></i>Кафедра</th>
                        <th><i class="fas fa-user me-2"></i>ФИО</th>
                        <th><i class="fas fa-briefcase me-2"></i>Должность</th>
                        <th><i class="fas fa-graduation-cap me-2"></i>Звание</th>
                        <th><i class="fas fa-percentage me-2"></i>Ставка</th>
                        <th width="120"><i class="fas fa-cogs me-2"></i>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Данные будут загружены через AJAX -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="teacherCardModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-id-card me-2"></i>Карточка преподавателя
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-item mb-3">
                            <label class="fw-bold text-primary">ФИО:</label>
                            <div class="fs-6" id="card-fio">-</div>
                        </div>
                        <div class="info-item mb-3">
                            <label class="fw-bold text-primary">Кафедра:</label>
                            <div class="fs-6" id="card-department">-</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-item mb-3">
                            <label class="fw-bold text-primary">Должность:</label>
                            <div class="fs-6" id="card-position">-</div>
                        </div>
                        <div class="info-item mb-3">
                            <label class="fw-bold text-primary">Звание:</label>
                            <div class="fs-6" id="card-title">-</div>
                        </div>
                        <div class="info-item mb-3">
                            <label class="fw-bold text-primary">Ставка:</label>
                            <div class="fs-6" id="card-bet">-</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Закрыть
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .card {
            border: none;
            border-radius: 15px;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #2c5aa0;
        }

        .teacher-card-btn {
            border-radius: 20px;
            padding: 0.25rem 1rem;
        }

        .info-item {
            padding: 0.5rem;
            border-radius: 8px;
            background-color: #f8f9fa;
        }

        .btn {
            border-radius: 8px;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script>
        var table;

        $(document).ready(function() {
            table = $('#accountingTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetAllAccountingData", "Home")',
                    type: 'GET',
                    dataSrc: function(json) {
                        console.log("Полученные данные:", json);
                        return json;
                    }
                },
                columns: [
                    { data: 'departmentName' },
                    { data: 'fio' },
                    { data: 'position' },
                    { data: 'title' },
                    { data: 'bet' },
                    {
                        data: null,
                        render: function(data, type, row) {
                            return '<button class="btn btn-sm btn-primary teacher-card-btn" data-teacher=\'' + JSON.stringify(row) + '\'>Карточка</button>';
                        },
                        orderable: false,
                        width: "120px"
                    }
                ],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/ru.json'
                }
            });

            $('.filter-input').on('keyup change', function() {
                var columnIndex = $(this).data('column');
                table.column(columnIndex).search($(this).val()).draw();
            });

            $('#resetFilters').on('click', function() {
                $('.filter-input').val('');
                table.search('').columns().search('').draw();
            });

            $(document).on('click', '.teacher-card-btn', function() {
                var teacherData = JSON.parse($(this).attr('data-teacher'));

                $('#card-fio').text(teacherData.fio || 'Не указано');
                $('#card-department').text(teacherData.departmentName || 'Не указано');
                $('#card-position').text(teacherData.position || 'Не указано');
                $('#card-title').text(teacherData.title || 'Не указано');
                $('#card-bet').text(teacherData.bet || 'Не указано');

                var modal = new bootstrap.Modal(document.getElementById('teacherCardModal'));
                modal.show();
            });

            $('#downloadReport').on('click', function() {
                var allData = table.rows({ search: 'applied' }).data().toArray();

                if (allData.length === 0) {
                    alert('Нет данных для экспорта!');
                    return;
                }

                $(this).html('<span class="spinner-border spinner-border-sm"></span> Генерация...');

                var dataStr = btoa(unescape(encodeURIComponent(JSON.stringify(allData))));
                var url = '@Url.Action("generateWordReportAccounting", "Home")?data=' + encodeURIComponent(dataStr);

                var link = document.createElement('a');
                link.href = url;
                link.download = 'Отчет_учетность.docx';
                link.target = '_blank';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                setTimeout(() => {
                    $('#downloadReport').html('<i class="fas fa-download me-2"></i>Скачать отчет');
                }, 1000);
            });
        });
    </script>
}