@using Contracts.ViewContract
@model List<OrderView>

@{
    ViewData["Title"] = "OrderTeacher";
}

<div class="text-center">
    <h2 class="display-4">Приказы</h2>
</div>

@if (Model == null)
{
    <div class="alert alert-warning text-center">
        <h3 class="display-4">Авторизируйтесь</h3>
    </div>
    return;
}

<div class="container mt-4">
    <!-- Блок поиска по номеру приказа -->
    <div class="row mb-4">
        <div class="col-md-6 offset-md-3">
            <div class="input-group">
                <input type="number" id="orderSearch" class="form-control" placeholder="Введите номер приказа" min="1">
                <button class="btn btn-primary" id="searchButton">Найти</button>
                <button class="btn btn-secondary" id="resetSearch">Сбросить</button>
            </div>
        </div>
    </div>

    <!-- Ссылка на создание нового приказа -->
    <div class="mb-3">
        <a asp-action="OrderTeacherCreate" asp-route-Note_id="" class="btn btn-success" id="createLink">
            <i class="fas fa-plus"></i> Создать новый приказ
        </a>
    </div>

    <!-- Таблица приказов -->
    <table id="ordersTable" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th>Номер</th>
                <th>Тип приказа</th>
                <th>Преподаватель</th>
                <th>Дата приказа</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.TypeOrders</td>
                    <td>@item.TeacherID</td>
                    <td>@item.DateOrder</td>
                    <td>
                        <a href="@Url.Action("OrderTeacherCreate", new { Note_id = item.Id })" class="btn btn-sm btn-primary">
                            <i class="fas fa-eye"></i> Просмотр
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        #ordersTable_wrapper .row:first-child {
            margin-bottom: 1rem;
        }
        .dataTables_filter input {
            margin-left: 0.5em;
        }
    </style>
}

@section Scripts {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function() {
            // Инициализация DataTable
            var table = $('#ordersTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/ru.json'
                },
                columnDefs: [
                    { targets: 0, width: "10%" },  // Номер
                    { targets: 1, width: "25%" },  // Тип приказа
                    { targets: 2, width: "25%" },  // Преподаватель
                    { targets: 3, width: "15%" },  // Дата
                    { targets: 4, width: "15%", orderable: false }  // Действия
                ]
            });

            // Поиск по номеру приказа
            $('#searchButton').click(function() {
                var orderId = $('#orderSearch').val();
                if (orderId) {
                    table.columns(0).search(orderId).draw();
                }
            });

            // Сброс поиска
            $('#resetSearch').click(function() {
                $('#orderSearch').val('');
                table.search('').columns().search('').draw();
            });

            // Обновление ссылки создания приказа при вводе номера
            $('#orderSearch').on('input', function() {
                var noteId = $(this).val();
                $('#createLink').attr('href', $('#createLink').attr('href').split('=')[0] + '=' + noteId);
            });
        });
    </script>
}