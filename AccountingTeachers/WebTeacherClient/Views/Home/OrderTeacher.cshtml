﻿@using Contracts.ViewContract
@model List<OrderView>

@{
    ViewData["Title"] = "OrderTeacher";
}

<div class="container-fluid">
    <div class="text-center mb-4">
        <h2 class="display-4 text-primary">
            <i class="fas fa-file-contract me-3"></i>Система приказов
        </h2>
        <p class="text-muted">Управление кадровыми документами</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-search me-2"></i>Поиск приказов</h5>
        </div>
        <div class="card-body">
            <div class="row align-items-end">
                <div class="col-md-4">
                    <label class="form-label text-muted">Поиск по номеру приказа</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="fas fa-hashtag text-primary"></i>
                        </span>
                        <input type="number" id="orderSearch" class="form-control" placeholder="Введите номер приказа" min="1">
                    </div>
                </div>
                <div class="col-md-4">
                    <button class="btn btn-primary me-2" id="searchButton">
                        <i class="fas fa-search me-1"></i>Найти
                    </button>
                    <button class="btn btn-outline-secondary" id="resetSearch">
                        <i class="fas fa-redo me-1"></i>Сбросить
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="text-primary mb-1">
                        <i class="fas fa-plus-circle me-2"></i>Создание нового приказа
                    </h5>
                    <p class="text-muted mb-0">Выберите тип приказа для создания</p>
                </div>
                <div class="col-md-4">
                    <div class="input-group">
                        <select id="orderTypeSelect" class="form-select">
                            <option value="Hiring">Найм преподавателя</option>
                            <option value="Swap">Перевод преподавателя</option>
                            <option value="Firring">Увольнение преподавателя</option>
                        </select>
                        <button class="btn btn-success" onclick="redirectToOrderPage()">
                            <i class="fas fa-plus me-1"></i>Создать
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0 text-primary">
                <i class="fas fa-list me-2"></i>Список приказов
            </h5>
        </div>
        <div class="card-body p-0">
            <table id="ordersTable" class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th width="15%"><i class="fas fa-hashtag me-2"></i>Номер</th>
                        <th width="25%"><i class="fas fa-tag me-2"></i>Тип приказа</th>
                        <th width="25%"><i class="fas fa-user-tie me-2"></i>Преподаватель</th>
                        <th width="15%"><i class="fas fa-calendar me-2"></i>Дата приказа</th>
                        <th width="20%"><i class="fas fa-cogs me-2"></i>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-primary">#@item.Id</span>
                            </td>
                            <td>
                                @if (item.TypeOrders == "Hiring")
                                {
                                    <span class='badge bg-success'><i class='fas fa-user-plus me-1'></i>Найм</span>
                                }
                                else if (item.TypeOrders == "Swap")
                                {
                                    <span class='badge bg-warning text-dark'><i class='fas fa-exchange-alt me-1'></i>Перевод</span>
                                }
                                else if (item.TypeOrders == "Firing")
                                {
                                    <span class='badge bg-danger'><i class='fas fa-user-times me-1'></i>Увольнение</span>
                                }
                                else
                                {
                                    <span class='badge bg-secondary'>@item.TypeOrders</span>
                                }
                            </td>
                            <td>@ViewBag.Name[item.TeacherID]</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.DateOrder))
                                {
                                    <small class="text-muted">@item.DateOrder</small>
                                }
                                else
                                {
                                    <small class="text-muted">-</small>
                                }
                            </td>
                            <td>
                                @{
                                    string actionName;
                                    switch (item.TypeOrders)
                                    {
                                        case "Hiring":
                                            actionName = "OrderTeacherCreateHiring";
                                            break;
                                        case "Swap":
                                            actionName = "OrderTeacherCreateSwap";
                                            break;
                                        case "Firing":
                                            actionName = "OrderTeacherCreateFirring";
                                            break;
                                        default:
                                            actionName = "OrderTeacherCreateHiring";
                                            break;
                                    }
                                }
                                <a href="@Url.Action(actionName, new { Note_id = item.Id })" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>Просмотр
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .badge {
            font-size: 0.8em;
            padding: 0.5em 0.8em;
        }

        .table td {
            vertical-align: middle;
        }

        .btn-sm {
            border-radius: 15px;
        }

        .card {
            border: none;
            border-radius: 15px;
        }

        .btn {
            border-radius: 8px;
        }
    </style>
}

@section Scripts {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function() {
            var table = $('#ordersTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/ru.json'
                },
                columnDefs: [
                    { targets: 0, width: "10%" },
                    { targets: 1, width: "25%" },
                    { targets: 2, width: "25%" },
                    { targets: 3, width: "15%" },
                    { targets: 4, width: "15%", orderable: false }
                ]
            });

            $('#searchButton').click(function() {
                var orderId = $('#orderSearch').val();
                if (orderId) {
                    table.columns(0).search(orderId).draw();
                }
            });

            $('#resetSearch').click(function() {
                $('#orderSearch').val('');
                table.search('').columns().search('').draw();
            });

            $('#orderSearch').on('input', function() {
                var noteId = $(this).val();
                $('#createLink').attr('href', $('#createLink').attr('href').split('=')[0] + '=' + noteId);
            });
        });

        function redirectToOrderPage() {
            const orderType = document.getElementById("orderTypeSelect").value;
            let url = "";

            switch (orderType) {
                case "Hiring":
                    url = "@Url.Action("OrderTeacherCreateHiring")";
                    break;
                case "Swap":
                    url = "@Url.Action("OrderTeacherCreateSwap")";
                    break;
                case "Firring":
                    url = "@Url.Action("OrderTeacherCreateFirring")";
                    break;
            }

            if (url) {
                window.location.href = url;
            }
        }
    </script>
}